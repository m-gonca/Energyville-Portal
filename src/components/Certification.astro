---
export interface Props {
  title: string;
  date: string;
  topic: string;
}
const { title, date, topic } = Astro.props;
---
<div class="flex h-[200px] justify-between bg-[#E0FFBD] shadow-2xl">
  <div class="flex flex-col w-4/5 p-8 gap-4">
	<h2 class="text-3xl font-semibold">{ title }</h2>
	<h3 class="text-xl">{ date }</h3>
	<p class="text-justify ">{ topic }</p>
  </div>
  <div class="w-1/5 flex justify-center items-center bg-[#8DC63F]">
	<img src="https://res.cloudinary.com/dmcofgm8p/image/upload/v1668993304/gadgeon/energyville/icon__file_text_outline__mwkgoz.png" alt="certification" >
  </div>
</div>

