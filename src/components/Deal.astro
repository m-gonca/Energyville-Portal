---
export interface Props {
  company: string;
  name: string;
  regisdate: string;
  validate: string;
}
const { company, name, regisdate, validate } = Astro.props;
---
<div class="flex justify-between bg-[#E0FFBD] shadow-2xl">
  <div class="flex flex-col lg:3/5 xl:w-4/5 p-8 gap-4">
    <div class="flex lg:flex-col xl:flex-row justify-between gap-2">
      <h2 class="text-xl font-bold">Company</h2>
      <h4 class="text-lg font-light lg:text-left xl:text-right">{ company }</h4>
    </div>
    <div class="flex lg:flex-col xl:flex-row justify-between gap-2">
      <h2 class="text-xl font-bold">Project's name</h2>
      <h4 class="text-lg font-light lg:text-left xl:text-right">{ name }</h4>
    </div>
    <div class="flex lg:flex-col xl:flex-row justify-between gap-2">
      <h2 class="text-xl font-bold">Registration Date</h2>
      <h4 class="text-lg font-light lg:text-left xl:text-right">{ regisdate }</h4>
    </div>
    <div class="flex lg:flex-col xl:flex-row justify-between gap-2">
      <h2 class="text-xl font-bold">Validation Date</h2>
      <h4 class="text-lg font-light lg:text-left xl:text-right">{ validate }</h4>
    </div>
    <div class="flex lg:justify-start xl:justify-end gap-4 items-center">
      <a href="#"><img src="https://res.cloudinary.com/dmcofgm8p/image/upload/v1668995314/gadgeon/energyville/Vector_3_we4izq.png" alt="edit"></a>
      <a href="#"><img src="https://res.cloudinary.com/dmcofgm8p/image/upload/v1668995284/gadgeon/energyville/icon__lock__b6ccrq.png" alt="lock"></a>
    </div>
  </div>
  <div class="lg:3/5 xl:w-1/5 flex justify-center items-center bg-[#8DC63F]">
	<img src="https://res.cloudinary.com/dmcofgm8p/image/upload/v1669070596/gadgeon/energyville/icon__menu_outline__f8jtff.png" alt="project" 
  class="p-4">
  </div>
</div>

