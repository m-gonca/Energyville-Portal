---
import Heading from "../components/Heading.astro";
import SecComp from "../components/SecComp.astro";

export interface Props {
  title: string;
  img: string;
}
const { title, img } = Astro.props;
---

<div class="flex flex-col w-full">
  <div class="h-screen flex flex-col mb-10">
    <div class="pl-40 pr-20">
      <div class="flex w-full gap-10 relative">
        <div class="h-full w-4/5 flex flex-col gap-12 mt-4">
          <div class="flex justify-between items-center">
            <Heading title={title} />
            <h1 class="text-5xl font-medium">Profile</h1>
          </div>
          <SecComp
            id="45454"
            name="John Doe"
            address="1234 Main St"
            country="USA"
            sales="John Doe"
            financial="John Doe"
            domain="Solar panels"
            specialization="Peakshaving"
            prime="John Doe"
            date="24/12/23"
          />
        </div>
        <div class="absolute -bottom-20 right-40">
          <img src={img} alt="set type" class="h-[400px]" />
        </div>
      </div>
    </div>
  </div>
</div>
