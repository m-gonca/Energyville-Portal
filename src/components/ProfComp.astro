---
import Heading from "../components/Heading.astro";
import SecComp from "../components/SecComp.astro";

export interface Props {
  title: string;
  img: string;
}
const { title, img } = Astro.props;
---

<div class="flex flex-col w-full pb-40 ">
  <div class="flex flex-col">
    <div class="lg:pl-40 lg:pr-20">
      <div class="flex flex-col m-auto w-4/5 lg:w-full gap-10 relative">
        <div class="h-full w-full lg:w-4/5 flex flex-col gap-12 ">
          <div class="flex justify-between items-center">
            <Heading title={title} />
            <h1 class="text-4xl lg:text-5xl font-medium">Profile</h1>
          </div>
          <SecComp
            id="45454"
            name="John Doe"
            address="1234 Main St"
            country="USA"
            sales="John Doe"
            financial="John Doe"
            domain="Solar panels"
            specialization="Peakshaving"
            prime="John Doe"
            date="24/12/23"
          />
        </div>
        <div class="w-full lg:w-4/5 lg:h-20">
          <div class="xl:absolute xl:bottom-20 xl:right-20 relative flex justify-center md:absolute md:bottom-0 md:right-2">
            <img
              src={img}
              alt="set type"
              class="xl:h-[340px] md:h-[300px]"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
