---
import Heading from "../components/Heading.astro";
import SecStat from "../components/SecStat.astro";

export interface Props {
  title: string;
  img: string;
}
const { title, img } = Astro.props;
---

<div class="flex flex-col w-full">
  <div class="flex flex-col">
    <div class="pl-40 pr-20">
      <div class="flex w-full relative">
        <div class="h-full w-4/5 flex flex-col gap-12 mt-4">
          <div class="flex justify-between items-center">
            <Heading title={title} />
            <h1 class="text-5xl font-medium">Profile</h1>
          </div>
          <SecStat
            status="Active"
            contact="Annabelle Smith"
            startdate="12/12/2020"
            renewaldate="12/12/2021"
          />
        </div>
        <div class="absolute -bottom-20 right-40">
          <img src={img} alt="set type" class="h-[400px]" />
        </div>
      </div>
    </div>
  </div>
</div>
