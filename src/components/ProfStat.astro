---
import Heading from "../components/Heading.astro";
import SecStat from "../components/SecStat.astro";

export interface Props {
  title: string;
  img: string;
}
const { title, img } = Astro.props;
---

<div class="flex flex-col w-full pb-40 ">
  <div class="flex flex-col">
    <div class="xl:pl-40 xl:pr-20">
      <div class="flex flex-col m-auto w-4/5 xl:w-full gap-10 relative">
        <div class="h-full w-full xl:w-4/5 flex flex-col gap-12 mt-4">
          <div class="flex justify-between items-center">
            <Heading title={title} />
            <h1 class="text-4xl xl:text-5xl font-medium">Profile</h1>
          </div>
          <SecStat
            status="Active"
            contact="Annabelle Smith"
            startdate="12/12/2020"
            renewaldate="12/12/2021"
          />
        </div>
        <div class="w-full xl:w-4/5 xl:h-20 mb-10">
          <div class="xl:absolute xl:bottom-20 xl:right-20 relative flex justify-center md:absolute md:bottom-10 md:-right-14">
            <img
              src={img}
              alt="set type"
              class="xl:h-[340px] md:h-[280px]"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
