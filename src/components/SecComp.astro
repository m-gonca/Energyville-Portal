---
export interface Props {
  id: string;
  name: string;
  address: string;
  country: string;
  sales: string;
  financial: string;
  domain: string;
  specialization: string;
  prime: string;
  date: string;
}
const {
  id,
  name,
  address,
  country,
  sales,
  financial,
  domain,
  specialization,
  prime,
  date,
} = Astro.props;
---

<div
  class="flex flex-col justify-between bg-[rgb(224,255,189)] shadow-2xl p-10 relative"
>
<!-- EDIT BUTTON -->
<button class="absolute right-8 top-6">
  <img src="https://res.cloudinary.com/dmcofgm8p/image/upload/v1668988300/gadgeon/energyville/icon__edit__yz68wd.png" alt="edit">
</button>
<!-- INFO -->
  <div class="flex flex-col gap-2">
    <h2 class="text-xl font-bold">Partner Id</h2>
    <h4 class="text-lg font-light">{ id }</h4>
  </div>
  <div class="flex flex-col gap-2">
    <h2 class="text-xl font-bold">Name</h2>
    <h4 class="text-lg font-light">{ name }</h4>
  </div>
  <div class="flex flex-col gap-2">
    <h2 class="text-xl font-bold">Adress</h2>
    <h4 class="text-lg font-light">{ address }</h4>
  </div>
  <div class="flex flex-col gap-2">
    <h2 class="text-xl font-bold">Country</h2>
    <h4 class="text-lg font-light">{ country }</h4>
  </div>
  <div class="flex flex-col gap-2">
    <h2 class="text-xl font-bold">Sales contact</h2>
    <h4 class="text-lg font-light">{ sales }</h4>
  </div>
  <div class="flex flex-col gap-2">
    <h2 class="text-xl font-bold">Financial contact</h2>
    <h4 class="text-lg font-light">{ financial }</h4>
  </div>
  <div class="flex flex-col gap-2">
    <h2 class="text-xl font-bold">Domain</h2>
    <h4 class="text-lg font-light">{ domain }</h4>
  </div>
  <div class="flex flex-col gap-2">
    <h2 class="text-xl font-bold">Specialization</h2>
    <h4 class="text-lg font-light">{ specialization }</h4>
  </div>
  <div class="flex flex-col gap-2">
    <h2 class="text-xl font-bold">EnergyVille Prime contact</h2>
    <h4 class="text-lg font-light">{ prime }</h4>
  </div>
  <div class="flex flex-col gap-2">
    <h2 class="text-xl font-bold">Start date</h2>
    <h4 class="text-lg font-light">{ date }</h4>
  </div>
</div>
