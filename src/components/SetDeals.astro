---
import Heading from "../components/Heading.astro";
import Deal from "../components/Deal.astro";

export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<div class="flex flex-col w-full">
  <div class="flex flex-col mb-10">
    <div class="px-40">
      <div class="flex gap-10">
        <div class="w-4/5 flex flex-col gap-14 mt-4 mb-10">
          <div class="flex justify-between items-center">
            <div class="flex w-full gap-2">
              <Heading title={title} />
              <button class="bg-[#8DC63F] rounded-xl"
                ><img
                  src="https://res.cloudinary.com/dmcofgm8p/image/upload/v1669065748/gadgeon/energyville/icon__plus__zzk4jc.png"
                  alt="add button"
                  class="h-8"
                />
              </button>
            </div>
            <h1 class="text-5xl font-medium">Profile</h1>
          </div>
          <Deal
            company="Company Name1"
            name="Project name1"
            regisdate="24/12/23"
            validate="10/08/23"
          />
          <Deal
            company="Company Name2"
            name="Project name2"
            regisdate="02/04/23"
            validate="10/08/23"
          />
          <Deal
            company="Company Name3"
            name="Project name3"
            regisdate="12/04/22"
            validate="10/08/23"
          />
        </div>
      </div>
    </div>
  </div>
</div>
